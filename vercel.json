{
  "routes": [
    {
      "src": "/v1/(.*)",
      "dest": "https://api.openai.com/v1/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": {
        "Authorization": "{req.headers.authorization} Bearer {process.env.OPENAI_API_TOKEN}"
      }
    },
    { "src": "/(.*)", "dest": "/" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "/" }
  ]
}
